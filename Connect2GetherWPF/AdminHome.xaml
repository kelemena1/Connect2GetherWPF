<Window x:Class="Connect2GetherWPF.AdminHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect2GetherWPF"
        mc:Ignorable="d"
        Title="AdminHome" Height="450" Width="1783">
    <Grid Background="#FF191919">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,38,0,0" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="390" Width="416" HorizontalGridLinesBrush="#FF41B06E" VerticalGridLinesBrush="Transparent" Background="Transparent" Foreground="White" RowBackground="#4C41B06E" HeadersVisibility="Column" AlternatingRowBackground="#B241B06E">
            <DataGrid.Resources>
                <SolidColorBrush Color="Black" x:Key="columnForeground"/>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Foreground" Value="#41B06E" />
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>

                <DataGridTemplateColumn Header="Nr " Width="38" CanUserSort="True" x:Name="SP001" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate >
                            <Label x:Name="SP001F" 
            Height="50" 
            Content="{Binding GrLaufendePosition}"

            Foreground="#FBF3D5" 
            FontWeight="Bold"
            Background="#00ffffff" 
            HorizontalAlignment="Center" 
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center" 
            BorderThickness="0" 
            VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <Label Content="1234" HorizontalAlignment="Left" Margin="457,37,0,0" VerticalAlignment="Top" Background="#FFDD5746" Foreground="White" Height="68" Width="85" FontFamily="Bahnschrift SemiBold" FontSize="36"/>
        <Label Content="Posts" HorizontalAlignment="Left" Margin="457,79,0,0" VerticalAlignment="Top" Foreground="White" Height="25" Width="37"/>

        <Label Content="1234" HorizontalAlignment="Left" Margin="558,37,0,0" VerticalAlignment="Top" Background="#FFC94A" Foreground="White" Height="68" FontFamily="Bahnschrift SemiBold" FontSize="36"/>
        <Label Content="Users" HorizontalAlignment="Left" Margin="560,79,0,0" VerticalAlignment="Top" Foreground="White" Height="25" Width="38"/>
        <DataGrid x:Name="dg_Sus" AutoGenerateColumns="false" Margin="667,0,0,0" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="358" Width="1075" HorizontalGridLinesBrush="#FF41B06E" VerticalGridLinesBrush="Transparent" Background="Transparent" Foreground="White" RowBackground="#4C41B06E" HeadersVisibility="Column" AlternatingRowBackground="#B241B06E" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Resources>
                <SolidColorBrush Color="Black" x:Key="columnForeground"/>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Foreground" Value="#41B06E" />
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" />
                <DataGridTextColumn Header="UserID" Binding="{Binding userId}" />
                <DataGridTextColumn Header="Username" Binding="{Binding username}" />
                <DataGridTemplateColumn Header="" Width="38" CanUserSort="True" x:Name="SP1" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate >
                            <Label x:Name="SP001F" 
                                    Height="50" 
                                    Content="{Binding GrLaufendePosition}"

                                    Foreground="#FBF3D5" 
                                    FontWeight="Bold"
                                    Background="#00ffffff" 
                                    HorizontalAlignment="Center" 
                                    HorizontalContentAlignment="Center" 
                                    VerticalContentAlignment="Center" 
                                    BorderThickness="0" 
                                    VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="416" Background="#FF191919" BorderBrush="#FF41B06E" Foreground="#41B06E" SelectionBrush="#FF00FF9C" TextChanged="TextBox_TextChanged"/>
        <Button Content="Suspicious" HorizontalAlignment="Left" Margin="457,121,0,0" VerticalAlignment="Top" Width="85" Height="48"  Foreground="White" Background="#5755FE" BorderBrush="#5755FE"/>


    </Grid>
</Window>