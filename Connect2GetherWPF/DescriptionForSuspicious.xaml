<Window x:Class="Connect2GetherWPF.DescriptionForSuspicious"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect2GetherWPF"
        mc:Ignorable="d"
        Title="Description for the marked user" Height="450" Width="395">
    <Grid Background="#FF191919">
        <Button x:Name="Send_sus_btn" Content="Mark user" HorizontalAlignment="Left" Margin="299,35,0,0" VerticalAlignment="Top" Click="Send_sus_btn_Click" Background="#FF41B06E" Foreground="White" Width="69" Height="40"/>
        <TextBox x:Name="Description_txtb" HorizontalAlignment="Left" Margin="10,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Height="344"/>
        <Button x:Name="Close" Content="Close" HorizontalAlignment="Left" Margin="299,359,0,0" VerticalAlignment="Top" Width="69" Height="40" Click="Close_Click" Background="#FFDD5746" Foreground="White"/>
        <Label x:Name="label" Content="Description" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White"/>

    </Grid>
</Window>
